{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ],
  "builds": [
    { 
      "src": "backend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/leaderboard",
      "dest": "/backend/app.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.js"
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1" 
    }
  ]
}